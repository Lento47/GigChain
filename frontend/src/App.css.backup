/* GigChain.io Styles */
:root {
  /* FlowPilot-inspired Theme Colors */
  --primary-color: #34d399; /* Emerald-400 - Accent color */
  --primary-light: #6ee7b7;
  --primary-dark: #10b981;
  --secondary-color: #34d399;
  --accent-color: #34d399; /* Emerald for accents */
  --danger-color: #ef4444;
  --warning-color: #f59e0b;
  --success-color: #34d399;
  
  /* Dark Background Colors - GitHub-like */
  --bg-primary: #0d1117; /* Very dark background */
  --bg-secondary: #161b22; /* Card background */
  --bg-tertiary: #22272e; /* Sidebar active */
  --bg-dark: #0d1117;
  
  /* Text Colors */
  --text-primary: #f0f6fc; /* White/light text */
  --text-secondary: #8b949e; /* Gray secondary text */
  --text-muted: #6e7681;
  --text-white: #ffffff;
  --text-dark: #0d1117;
  
  /* Border Colors */
  --border-color: #30363d;
  --border-light: #21262d;
  --border-dark: #6e7681;
  
  /* Card Colors */
  --card-bg: #161b22;
  --card-border: #30363d;
  
  /* Professional Gradients */
  --primary-gradient: linear-gradient(135deg, #34d399 0%, #10b981 100%);
  --secondary-gradient: linear-gradient(135deg, #f59e0b 0%, #ef4444 100%);
  
  /* Shadows */
  --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: var(--bg-secondary);
  color: var(--text-primary);
  min-height: 100vh;
}

/* Ensure all text is visible */
h1, h2, h3, h4, h5, h6 {
  color: var(--text-primary);
}

p, span, div {
  color: inherit;
}

button {
  color: inherit;
}

input, textarea, select {
  color: var(--text-primary);
}

.app {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* App Layout with Sidebar */
.app-layout {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0e1a 0%, #1a202c 100%);
}

/* Sidebar Styles */
.sidebar {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  background: var(--bg-primary);
  border-right: 1px solid var(--border-color);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1000;
  display: flex;
  flex-direction: column;
  color: var(--text-primary);
  width: 280px;
}

.sidebar-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  display: none;
}

@media (max-width: 768px) {
  .sidebar-overlay {
    display: block;
  }
}

.sidebar.open {
  width: 280px;
}

.sidebar.closed {
  width: 80px;
}

.sidebar-header {
  padding: 1rem;
  border-bottom: 1px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 1rem;
}

.logo {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  color: var(--text-primary);
  font-weight: 700;
  font-size: 1.25rem;
  flex: 1;
  justify-content: flex-start;
  min-width: 0;
}

.logo-icon {
  width: 2rem;
  height: 2rem;
  background: var(--accent-color);
  border-radius: 0.5rem;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--bg-primary);
}

.sidebar.closed .logo {
  justify-content: center;
}

.logo-text {
  transition: opacity 0.3s ease;
  color: var(--text-primary) !important;
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.logo-main {
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--text-primary);
}

.logo-tag {
  font-size: 0.75rem;
  color: var(--primary-color);
  background: var(--primary-gradient);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 600;
}

.sidebar.closed .logo-text {
  opacity: 0;
  width: 0;
  overflow: hidden;
}

.sidebar-toggle {
  background: none;
  border: none;
  color: #64748b;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 8px;
  transition: background-color 0.2s ease, color 0.2s ease;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40px;
  height: 40px;
}

.sidebar-toggle:hover {
  background: #f1f5f9;
  color: #334155;
}

.sidebar.closed .sidebar-toggle {
  background: #667eea;
  color: white;
  box-shadow: 0 2px 8px rgba(102, 126, 234, 0.3);
}

.sidebar.closed .sidebar-toggle:hover {
  background: #5a67d8;
}


.sidebar-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
}

.current-project {
  padding: 1rem 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.project-label {
  font-size: 0.875rem;
  color: var(--text-primary);
  font-weight: 600;
}

.sidebar-nav {
  flex: 1;
  padding: 0 1rem;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
}

.nav-section {
  margin-bottom: 1.5rem;
}

.nav-section.bottom-section {
  margin-top: auto;
  margin-bottom: 0;
  padding-top: 1rem;
  border-top: 1px solid var(--border-color);
}

.section-title {
  font-size: 0.75rem;
  font-weight: 600;
  color: var(--text-secondary);
  text-transform: uppercase;
  letter-spacing: 0.05em;
  margin-bottom: 0.5rem;
}

.section-items {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.nav-item {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem;
  background: none;
  border: none;
  color: var(--text-secondary);
  cursor: pointer;
  transition: all 0.15s ease;
  text-align: left;
  font-size: 0.875rem;
  font-weight: 500;
  border-radius: 0.5rem;
  position: relative;
}

.nav-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: -1;
}

.nav-item:hover {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.nav-item.active {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  font-weight: 600;
}

.nav-item.active .nav-label {
  color: var(--accent-color);
}

.nav-label {
  transition: opacity 0.3s ease;
  white-space: nowrap;
  flex: 1;
}

.nav-badge {
  background: var(--primary-gradient);
  color: white;
  font-size: 0.625rem;
  font-weight: 600;
  padding: 0.25rem 0.5rem;
  border-radius: 0.375rem;
  text-transform: uppercase;
  letter-spacing: 0.025em;
}

.sidebar.closed .nav-label {
  opacity: 0;
  width: 0;
  overflow: hidden;
}

.sidebar-footer {
  padding: 1rem;
  border-top: 1px solid var(--border-color);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  padding: 0.5rem;
  background: var(--bg-tertiary);
  border-radius: 0.5rem;
}

.user-avatar {
  width: 2rem;
  height: 2rem;
  background: var(--accent-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--bg-primary);
  font-weight: 600;
  font-size: 0.75rem;
}

.user-details {
  display: flex;
  flex-direction: column;
  transition: opacity 0.3s ease;
}

.sidebar.closed .user-details {
  opacity: 0;
  width: 0;
  overflow: hidden;
}

.user-name {
  font-weight: 600;
  color: #1e293b;
  font-size: 0.9rem;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
  word-break: break-all;
}

.user-role {
  color: #64748b;
  font-size: 0.8rem;
}

/* Main Content */
.main-content {
  position: fixed;
  top: 0;
  left: 280px;
  right: 0;
  bottom: 0;
  transition: left 0.3s ease;
  display: flex;
  flex-direction: column;
  background: linear-gradient(135deg, #0a0e1a 0%, #1a202c 100%);
  overflow-y: auto;
  min-width: 0; /* Permite que el contenido se contraiga */
}

.main-content.sidebar-closed {
  left: 80px;
}

.content-header {
  background: var(--bg-primary);
  border-bottom: 1px solid var(--border-color);
  padding: 1rem 2rem;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  color: var(--text-primary);
  gap: 1.5rem;
  position: sticky;
  top: 0;
  flex-wrap: wrap;
  min-width: 0; /* Permite que el contenido se contraiga */
  z-index: 10;
  backdrop-filter: blur(10px);
}

.header-left {
  flex: 1;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.page-title {
  font-size: 1.5rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 0.25rem;
}

.page-subtitle {
  font-size: 0.875rem;
  color: var(--text-secondary);
  margin: 0;
}

.date-filter {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.date-range-picker,
.frequency-selector {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  padding: 0.5rem 1rem;
  color: var(--text-primary);
  font-size: 0.875rem;
}

.frequency-selector select {
  background: none;
  border: none;
  color: var(--text-primary);
  outline: none;
}

.refresh-btn {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  background: none;
  border: none;
  color: var(--accent-color);
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: color 0.15s ease;
}

.refresh-btn:hover {
  color: var(--text-primary);
}


.header-right {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.search-bar {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8fafc;
  border: 1px solid #e2e8f0;
  border-radius: 8px;
  padding: 0.5rem 1rem;
  min-width: 300px;
}

.search-bar input {
  border: none;
  background: none;
  outline: none;
  margin-left: 0.5rem;
  flex: 1;
  color: #64748b;
}

.search-bar input::placeholder {
  color: #94a3b8;
}

.notification-btn {
  background: none;
  border: none;
  color: #64748b;
  cursor: pointer;
  padding: 0.75rem;
  border-radius: 8px;
  transition: all 0.2s;
}

.notification-btn:hover {
  background: #f1f5f9;
  color: #334155;
}

.wallet-connection {
  margin-left: 0.5rem;
}

.content-body {
  flex: 1;
  padding: 2rem;
  overflow-y: auto;
  min-width: 0; /* Permite que el contenido se contraiga */
}

/* Dashboard Styles */
.dashboard {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  display: flex;
  flex-direction: column;
  width: 100%;
  min-width: 0; /* Permite que el contenido se contraiga */
  gap: 2rem;
  background: var(--bg-primary);
  min-height: 100vh;
}

.metrics-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1.5rem;
}

.metrics-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1.5rem;
  margin-bottom: 2rem;
  width: 100%;
  min-width: 0; /* Permite que las columnas se contraigan */
}

.metric-card {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  padding: 1.5rem;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.metric-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  border-color: var(--accent-color);
}

.metric-label {
  font-size: 0.875rem;
  font-weight: 500;
  color: var(--text-secondary);
  margin-bottom: 0.5rem;
}

.metric-value {
  font-size: 2.5rem;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.progress-bar-container {
  height: 4px;
  background-color: var(--bg-tertiary);
  border-radius: 9999px;
  overflow: hidden;
  margin-bottom: 0.5rem;
}

.progress-bar {
  height: 100%;
  background-color: var(--accent-color);
  transition: width 0.3s ease-in-out;
}

.metric-change {
  font-size: 0.75rem;
  font-weight: 600;
  margin: 0;
}

.metric-change.positive {
  color: var(--accent-color);
}

.metric-change.negative {
  color: #ef4444;
}

.chart-section {
  margin-bottom: 2rem;
}

.chart-container {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  padding: 1.5rem;
  height: 400px;
  display: flex;
  flex-direction: column;
}

.chart-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 1rem;
}

.chart-visualization {
  flex: 1;
  width: 100%;
  overflow: hidden;
  min-height: 300px;
  position: relative;
}

.chart-svg {
  width: 100%;
  height: 100%;
  min-height: 300px;
  display: block;
}

.chart-line-main {
  transition: all 0.3s ease;
  filter: drop-shadow(0 0 8px rgba(52, 211, 153, 0.3));
}

.chart-line-main.hovered {
  stroke-width: 6;
  filter: drop-shadow(0 0 12px rgba(52, 211, 153, 0.6));
  animation: chartPulse 2s ease-in-out infinite;
}

.chart-line-secondary {
  transition: all 0.3s ease;
}

.chart-line-secondary.hovered {
  stroke-width: 3;
  opacity: 0.8;
}

.chart-point {
  transition: all 0.3s ease;
  filter: drop-shadow(0 0 4px rgba(52, 211, 153, 0.5));
}

.chart-point.hovered {
  r: 12;
  filter: drop-shadow(0 0 8px rgba(52, 211, 153, 0.8));
  animation: chartPointPulse 1.5s ease-in-out infinite;
}

.mouse-tracking-line {
  animation: mouseTrackingPulse 1s ease-in-out infinite;
}

.hover-circle {
  animation: hoverCirclePulse 1.5s ease-in-out infinite;
}

.chart-area {
  transition: opacity 0.3s ease;
}

.chart-tooltip {
  position: absolute;
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 0.75rem;
  padding: 0.75rem 1rem;
  box-shadow: var(--shadow-lg);
  z-index: 1000;
  pointer-events: none;
  backdrop-filter: blur(10px);
  min-width: 120px;
  transition: all 0.2s ease;
}

.tooltip-content {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
  text-align: center;
}

.tooltip-time {
  font-size: 0.75rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.tooltip-value {
  font-size: 1rem;
  color: var(--accent-color);
  font-weight: 700;
}

.tooltip-contracts {
  font-size: 0.75rem;
  color: var(--text-primary);
  font-weight: 500;
}

/* Chart Header Styles */
.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.user-type-selector {
  display: flex;
  gap: 0.5rem;
  background: var(--bg-secondary);
  padding: 0.25rem;
  border-radius: 0.75rem;
  border: 1px solid var(--border-color);
}

.user-type-btn {
  padding: 0.5rem 1rem;
  border: none;
  background: transparent;
  color: var(--text-secondary);
  border-radius: 0.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.875rem;
  font-weight: 500;
}

.user-type-btn:hover {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.user-type-btn.active {
  background: var(--accent-color);
  color: var(--bg-primary);
  font-weight: 600;
}

.chart-instruction {
  text-align: center;
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-top: 1rem;
  font-style: italic;
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10000;
  backdrop-filter: blur(4px);
}

.jobs-modal {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  width: 95%;
  max-width: 1200px;
  max-height: 90vh;
  overflow: hidden;
  box-shadow: var(--shadow-xl);
  margin: 1rem;
  margin-left: 300px; /* Ajustar para que no se superponga con el sidebar */
}

/* Cuando el sidebar está cerrado */
.sidebar.closed ~ .modal-overlay .jobs-modal {
  margin-left: 100px; /* Ajustar para sidebar cerrado */
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1.5rem;
  border-bottom: 1px solid var(--border-color);
  background: var(--bg-secondary);
}

.modal-header h2 {
  margin: 0;
  color: var(--text-primary);
  font-size: 1.5rem;
  font-weight: 700;
}

.close-btn {
  background: none;
  border: none;
  color: var(--text-secondary);
  font-size: 1.5rem;
  cursor: pointer;
  padding: 0.5rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease;
}

.close-btn:hover {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.modal-content {
  padding: 1.5rem;
  max-height: calc(90vh - 120px);
  overflow-y: auto;
}

.period-info {
  margin-bottom: 2rem;
  padding: 1rem;
  background: var(--bg-secondary);
  border-radius: 0.75rem;
  border: 1px solid var(--border-color);
}

.period-stats {
  display: flex;
  gap: 2rem;
}

.stat {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.stat-label {
  font-size: 0.875rem;
  color: var(--text-secondary);
  font-weight: 500;
}

.stat-value {
  font-size: 1.5rem;
  color: var(--accent-color);
  font-weight: 700;
}

/* Jobs Grid */
.jobs-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 1.5rem;
  width: 100%;
  min-width: 0; /* Permite que las columnas se contraigan */
}

.job-card {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  padding: 1.5rem;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  min-width: 0; /* Permite que el contenido se contraiga */
  flex: 1;
}

.job-card:hover {
  border-color: var(--accent-color);
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(52, 211, 153, 0.15);
}

.job-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 0.75rem;
}

.job-title {
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--text-primary);
  margin: 0;
  flex: 1;
}

.job-budget {
  background: var(--primary-gradient);
  color: var(--bg-primary);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.875rem;
  font-weight: 600;
  white-space: nowrap;
}

.job-company {
  color: var(--text-secondary);
  font-size: 0.875rem;
  margin-bottom: 0.75rem;
  font-weight: 500;
}

.job-details {
  margin-bottom: 1rem;
}

.job-duration {
  color: var(--text-secondary);
  font-size: 0.875rem;
  font-weight: 500;
}

.job-skills {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-bottom: 1rem;
}

.skill-tag {
  background: var(--bg-tertiary);
  color: var(--text-primary);
  padding: 0.25rem 0.75rem;
  border-radius: 1rem;
  font-size: 0.75rem;
  font-weight: 500;
  border: 1px solid var(--border-color);
}

.job-description {
  color: var(--text-secondary);
  font-size: 0.875rem;
  line-height: 1.5;
  margin-bottom: 1.5rem;
}

.job-actions {
  display: flex;
  justify-content: flex-end;
}

.apply-btn {
  background: var(--primary-gradient);
  color: var(--bg-primary);
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 0.75rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  font-size: 0.875rem;
}

.apply-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(52, 211, 153, 0.3);
}

.no-jobs {
  text-align: center;
  padding: 3rem;
  color: var(--text-secondary);
}

.no-jobs-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.no-jobs h3 {
  color: var(--text-primary);
  margin-bottom: 0.5rem;
}

/* Contract Form Modal */
.contract-form-modal {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: 1rem;
  width: 90%;
  max-width: 600px;
  max-height: 90vh;
  overflow: hidden;
  box-shadow: var(--shadow-xl);
}

.contract-form {
  padding: 1.5rem;
  max-height: calc(90vh - 120px);
  overflow-y: auto;
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  margin-bottom: 0.5rem;
  color: var(--text-primary);
  font-weight: 600;
  font-size: 0.875rem;
}

.form-group input,
.form-group textarea,
.form-group select {
  width: 100%;
  padding: 0.75rem;
  border: 1px solid var(--border-color);
  border-radius: 0.5rem;
  background: var(--bg-secondary);
  color: var(--text-primary);
  font-size: 0.875rem;
  transition: all 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--accent-color);
  box-shadow: 0 0 0 3px rgba(52, 211, 153, 0.1);
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.form-actions {
  display: flex;
  gap: 1rem;
  justify-content: flex-end;
  margin-top: 2rem;
  padding-top: 1.5rem;
  border-top: 1px solid var(--border-color);
}

.cancel-btn {
  padding: 0.75rem 1.5rem;
  border: 1px solid var(--border-color);
  background: transparent;
  color: var(--text-secondary);
  border-radius: 0.75rem;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 500;
}

.cancel-btn:hover {
  background: var(--bg-tertiary);
  color: var(--text-primary);
}

.submit-btn {
  padding: 0.75rem 1.5rem;
  border: none;
  background: var(--primary-gradient);
  color: var(--bg-primary);
  border-radius: 0.75rem;
  cursor: pointer;
  transition: all 0.3s ease;
  font-weight: 600;
}

.submit-btn:hover {
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(52, 211, 153, 0.3);
}

/* Wallet Connection Override */
.main-wallet-connection {
  background: var(--bg-secondary) !important;
  border: 1px solid var(--border-color) !important;
  color: var(--text-primary) !important;
}

.main-wallet-connection .wallet-status {
  background: transparent !important;
}

.main-wallet-connection .wallet-indicator {
  background: transparent !important;
}

.main-wallet-connection .status-text {
  color: var(--text-primary) !important;
}

.main-wallet-connection .wallet-address {
  background: var(--bg-tertiary) !important;
  color: var(--text-primary) !important;
  border: 1px solid var(--border-color) !important;
}

.main-wallet-connection .wallet-address:hover {
  background: var(--bg-primary) !important;
}

@keyframes chartPulse {
  0%, 100% {
    stroke-width: 6;
    filter: drop-shadow(0 0 12px rgba(52, 211, 153, 0.6));
  }
  50% {
    stroke-width: 8;
    filter: drop-shadow(0 0 16px rgba(52, 211, 153, 0.8));
  }
}

@keyframes chartPointPulse {
  0%, 100% {
    r: 12;
    filter: drop-shadow(0 0 8px rgba(52, 211, 153, 0.8));
  }
  50% {
    r: 16;
    filter: drop-shadow(0 0 12px rgba(52, 211, 153, 1));
  }
}

/* Efecto de ondas en la línea principal */
.chart-line-main::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent, var(--accent-color), transparent);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.chart-hover-area:hover + .chart-line-main::before {
  opacity: 0.3;
  animation: chartWave 2s linear infinite;
}

@keyframes chartWave {
  0% {
    transform: translateX(-100%);
  }
  100% {
    transform: translateX(100%);
  }
}

@keyframes mouseTrackingPulse {
  0%, 100% {
    opacity: 0.6;
    stroke-width: 1;
  }
  50% {
    opacity: 1;
    stroke-width: 2;
  }
}

@keyframes hoverCirclePulse {
  0%, 100% {
    r: 8;
    opacity: 1;
  }
  50% {
    r: 12;
    opacity: 0.8;
  }
}

