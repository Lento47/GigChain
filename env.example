# GigChain Backend Environment Variables

# Server Configuration
PORT=5000
DEBUG=True

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# CORS Configuration (Production)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# W-CSAP Authentication
W_CSAP_SECRET_KEY=your_secret_key_here_min_32_chars

# Database Configuration
# Development (default)
DATABASE_TYPE=sqlite

# Production (PostgreSQL for 10,000+ users)
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/gigchain
# Or use components:
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=gigchain_user
# DB_PASSWORD=your_password
# DB_NAME=gigchain

# ==================== SECURITY MONITORING ====================

# SIEM Integration (Optional - Choose one or multiple)

# Splunk HTTP Event Collector
# SPLUNK_HEC_URL=https://splunk.example.com:8088/services/collector
# SPLUNK_HEC_TOKEN=12345678-1234-1234-1234-123456789012

# Elasticsearch
# ELASTIC_URL=https://elastic.example.com:9200
# ELASTIC_INDEX=gigchain-security
# ELASTIC_API_KEY=your_api_key_here
# Or use username/password:
# ELASTIC_USERNAME=elastic
# ELASTIC_PASSWORD=your_password

# Datadog Logs
# DATADOG_API_KEY=your_32_char_api_key
# DATADOG_SITE=datadoghq.com  # or datadoghq.eu

# AI Anomaly Detection (Always enabled - no config needed)

# ==================== IPFS STORAGE ====================

# IPFS Mode: 'local' (default), 'pinata', 'infura', 'nft.storage'
IPFS_MODE=local

# Local IPFS Configuration (default)
IPFS_API_URL=/ip4/127.0.0.1/tcp/5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080

# Pinata Configuration (for production)
# PINATA_API_KEY=your_pinata_api_key
# PINATA_SECRET_KEY=your_pinata_secret_key

# Infura IPFS Configuration (alternative)
# INFURA_PROJECT_ID=your_infura_project_id
# INFURA_PROJECT_SECRET=your_infura_secret

# NFT.Storage Configuration (alternative)
# NFT_STORAGE_API_KEY=your_nft_storage_key

# IPFS Features
# Enable automatic IPFS storage for all contracts
AUTO_IPFS_STORAGE=false

# Auto-pin contracts on IPFS (prevents garbage collection)
AUTO_PIN_CONTRACTS=true